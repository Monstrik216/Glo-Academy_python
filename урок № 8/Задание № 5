import math
print('Введите последовательность целых чисел (1 5 0):')
n = int(input())
total = 0
total_n = 0
while n != 0:
      if n > 0:
            total += 1
      if n < 0:
            total_n += 1
      n = int(input())
print('Произведение кол-ва положительных и отрицательных чисел равно', total * total_n)

print('Введите последовательность целых чисел (1 -5 3 0 ):')
n = int(input())
total = 0
total_n = 0
while n != 0:
      if n > 0:
            total += 1
      if n < 0:
            total_n += 1
      n = int(input())
print('Произведение кол-ва положительных и отрицательных чисел равно', total * total_n)
